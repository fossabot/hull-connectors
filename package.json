{
  "name": "hull-connectors",
  "version": "0.0.17-monorepo",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/connectors/*",
      "packages/*"
    ],
    "nohoist": [
      "**/hull",
      "**/hull-client",
      "**/minihull",
      "**/hull-repl",
      "**/hull-connector-framework"
    ]
  },
  "license": "MIT",
  "scripts": {
    "duplicated-dependencies": "syncpack-list-mismatches -s 'packages/*/package.json' -s 'packages/connectors/*/package.json'",
    "build": "babel packages -d dist --delete-dir-on-start && rsync -rl packages/ dist/ --ignore-existing",
    "dev": "sh scripts/start-dev-connector.sh",
    "test": "yarn test:lint && jest && yarn workspaces run test",
    "test:lint": "eslint packages",
    "test:ci": "yarn test:lint && jest --runInBand && nyc --babel-cache --hook-run-in-context false yarn workspaces run test",
    "heroku-postbuild": "yarn build"
  },
  "engines": {
    "node": "8.12.x",
    "npm": "6.4.x",
    "yarn": "1.10.x"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/node": "^7.0.0",
    "@babel/plugin-syntax-object-rest-spread": "^7.0.0",
    "@babel/plugin-transform-flow-strip-types": "^7.0.0",
    "@babel/register": "^7.0.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "chai": "^4.2.0",
    "documentation": "^8.1.2",
    "dotenv-cli": "^1.4.0",
    "eslint": "^5.6.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^3.1.0",
    "eslint-plugin-flowtype": "^2.50.3",
    "eslint-plugin-flowtype-errors": "^3.6.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jest": "^21.25.0",
    "eslint-plugin-prettier": "^3.0.0",
    "flow-bin": "^0.82.0",
    "flow-typed": "^2.5.1",
    "jest": "^23.6.0",
    "mocha": "^5.2.0",
    "nock": "^10.0.0",
    "nodemon": "^1.18.7",
    "nyc": "^13.0.1",
    "prettier": "^1.14.3",
    "rimraf": "^2.6.2",
    "sinon": "^6.3.5",
    "sinon-chai": "^3.2.0",
    "syncpack": "^3.0.0"
  },
  "dependencies": {
    "JSONStream": "^1.3.4",
    "basic-auth": "^2.0.1",
    "bluebird": "^3.5.2",
    "body-parser": "^1.18.3",
    "cache-manager": "^2.9.0",
    "datadog-metrics": "^0.8.1",
    "debug": "^4.0.1",
    "ejs": "^2.6.1",
    "express": "^4.16.3",
    "hashmap": "^2.3.0",
    "kue": "^0.11.6",
    "lodash": "^4.17.11",
    "moment": "^2.22.2",
    "newrelic": "^4.9.0",
    "raven": "^2.6.4",
    "superagent": "^3.8.3",
    "urijs": "^1.19.1",
    "uuid": "^3.3.2"
  }
}

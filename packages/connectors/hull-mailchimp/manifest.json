{
  "name": "Mailchimp",
  "version": "0.0.20-monorepo",
  "description": "Powerful segmentation and enrichment for Mailchimp - the worldâ€™s favorite email platform",
  "tags": [
    "outgoing",
    "incoming",
    "batch",
    "oneColumn",
    "smart-notifier",
    "first-install",
    "single-install"
  ],
  "source": "mailchimp",
  "logo": "logo.png",
  "picture": "picture.png",
  "private_settings":[
    {
      "name": "configuration_title",
      "title": "Configuration",
      "format": "title",
      "type": "string"
    },
    {
      "name": "synchronized_user_segments",
      "title": "User Filter",
      "description": "Send users to Mailchimp when belonging to at least one of these segments. If no segments are specified all users are sent to Mailchimp.",
      "type": "array",
      "format": "segment",
      "options": {
        "standard": {
          "ALL": "All Users"
        }
      },
      "default": ["ALL"]
    },
    {
      "name": "mailchimp_list_id",
      "title": "Mailchimp List ID",
      "description": "Mailchimp List ID selected by user",
      "type": "string",
      "format": "hidden"
    },
    {
      "name": "mailchimp_list_name",
      "title": "Mailchimp List Name",
      "description": "Mailchimp List Name selected by user",
      "type": "string",
      "format": "hidden"
    },
    {
      "name": "api_key",
      "title": "API Key",
      "description": "Token or API Key",
      "type": "string",
      "format": "hidden"
    },
    {
      "name": "api_endpoint",
      "title": "API Endpoint",
      "description": "Mailchimp API endpoint",
      "type": "string",
      "format": "hidden"
    },
    {
      "name": "domain",
      "title": "API Domain",
      "description": "Mailchimp API Domain",
      "type": "string",
      "format": "hidden"
    },
    {
      "name": "data_title",
      "title": "Data Mapping",
      "format": "title",
      "type": "string"
    },
    {
      "name": "segment_mapping",
      "type": "object",
      "properties": {},
      "format": "hidden"
    },
    {
      "name": "interest_category_id",
      "title": "Interest category ID",
      "type": "string",
      "format": "hidden"
    },
    {
      "name": "interests_mapping",
      "type": "object",
      "properties": {},
      "format": "hidden"
    },
    {
      "name": "outgoing_user_attributes",
      "title": "Send the following user attributes to Mailchimp",
      "type": "array",
      "format": "traitMapping",
      "options": {
        "direction": "outgoing",
        "placeholder": "Mailchimp Merge Field",
        "allowCreate": false,
        "loadOptions": "/schema/user_fields"
      },
      "default": [
        {
          "hull": "first_name",
          "service": "FNAME",
          "overwrite": false
        },
        {
          "hull": "last_name",
          "service": "LNAME",
          "overwrite": false
        }
      ]
    },
    {
      "name": "force_removal_from_static_segments",
      "description": "When enabled when processing batch extract it will try to remove user from static segments they should not be in",
      "default": false,
      "type": "boolean",
      "format": "hidden"
    },
    {
      "name": "fetch_user_activity_on_update",
      "description": "When enabled it will get user activites on user:update",
      "default": true,
      "type": "boolean",
      "format": "hidden"
    }
  ],
  "readme": "readme.md",
  "ui": false,
  "subscriptions": [
    {
      "url": "/smart-notifier",
      "channels": [
        {
          "channel": "user:update",
          "handler": "user_update"
        },
        {
          "channel": "ship:update",
          "handler": "ship_update"
        },
        {
          "channel": "users_segment:update",
          "handler": "users_segment_update"
        },
        {
          "channel": "users_segment:delete",
          "handler": "users_segment_delete"
        }
      ]
    }
  ],
  "batches": [
    {
      "url": "/batch",
      "channels": [
        {
          "channel": "user:update",
          "handler": "user_update",
          "options": {
            "maxSize": 500
          }
        }
      ]
    }
  ],
  "tabs": [
    {
      "title": "Credentials & Actions",
      "url": "/auth/",
      "size": "small",
      "setup": true,
      "editable": false,
      "handler": "auth",
      "method": "use",
      "options":{
        "type": "OAuth",
        "name": "Mailchimp",
        "strategy": {
          "grant_type": "authorization_code"
        },
        "views": {
          "login": "login.html",
          "success": "finished.html",
          "home": "sync.html"
        }
      }
    }
  ],
  "incoming": [
    {
      "url": "/mailchimp",
      "handler": "webhook",
      "options": {
        "bodyParser": "urlencoded",
        "credentialsFromQuery": true
      }
    }
  ],
  "json": [
    {
      "url": "/sync-in",
      "handler": "syncIn"
    },
    {
      "url": "/sync-out",
      "handler": "syncOut"
    },
    {
      "url": "/schema/user_fields",
      "handler": "schemaUserFields"
    }
  ],
  "schedules": [
    {
      "url": "/sync",
      "handler": "sync",
      "type": "cron",
      "value": "*/30 * * * *",
      "options": {
        "strict": false
      }
    },
    {
      "url": "/track",
      "type": "cron",
      "handler": "track",
      "value": "7 */6 * * *"
    }
  ],
  "statuses": [
    {
      "url": "/status",
      "handler": "status",
      "type": "cron",
      "value": "*/30 * * * *"
    }
  ]
}

{
  "name": "Intercom",
  "description": "Enrich your Leads and Contacts in Intercom and Trigger Powerful Workflows",
  "source": "intercom",
  "logo": "logo.png",
  "picture": "picture.png",
  "version": "0.1.33-monorepo",
  "tags": [
    "outgoing",
    "incoming",
    "batch",
    "batch-accounts",
    "oneColumn",
    "smart-notifier",
    "first-install",
    "single-install",
    "kraken-exports"
  ],
  "private_settings": [
    {
      "name": "oauth",
      "title": "Credentials",
      "description": "Authenticate with Intercom",
      "format": "oauth",
      "type": "string",
      "handler": "oauth",
      "url": "/auth",
      "options": {
        "name": "Intercom",
        "scope": ["refresh_token", "api"],
        "strategy": {
          "name": "Intercom",
          "scope": ["refresh_token", "api"]
        }
      }
    },
    {
      "name": "access_token",
      "title": "Access Token",
      "type": "string",
      "format": "hidden"
    },
    {
      "name": "webhook_id",
      "title": "Intercom webhook id",
      "type": "string",
      "format": "hidden"
    },
    {
      "name": "synchronized_lead_segments",
      "title": "Lead Filter",
      "description": "Send Hull users as Intercom leads when they belong to one of these segments to Intercom. Only users in the specified segments are sent. Updates from Intercom are always fetched for all leads.",
      "type": "array",
      "format": "segment",
      "default": []
    },
    {
      "name": "synchronized_user_segments",
      "title": "User Filter",
      "description": "Send Hull users as Intercom users when they belong to one of these segments to Intercom. Only users in the specified segments are sent. Updates from Intercom are always fetched for all users.",
      "type": "array",
      "format": "segment",
      "default": []
    },
    {
      "name": "user_claims",
      "title": "User and Lead Identity",
      "type": "array",
      "format": "table",
      "items": {
        "type": "object",
        "properties": {
          "hull": {
            "title": "Hull Identifier",
            "enum": ["email", "external_id"]
          },
          "service": {
            "title": "Intercom Identifier",
            "enum": ["email", "external_id"]
          }
        }
      },
      "default": [
        {
          "hull": "email",
          "service": "email"
        },
        {
          "hull": "external_id",
          "service": "external_id"
        }
      ]
    },
    {
      "name": "lead_claims",
      "title": "Lead Identity",
      "type": "array",
      "format": "table",
      "items": {
        "type": "object",
        "properties": {
          "hull": {
            "title": "Hull Identifier",
            "enum": ["email"]
          },
          "service": {
            "title": "Intercom Identifier",
            "enum": ["email"]
          }
        }
      },
      "default": [
        {
          "hull": "email",
          "service": "email"
        }
      ]
    },
    {
      "name": "incoming_lead_attributes",
      "title": "Lead Incoming Fields",
      "description": "List of Lead fields to fetch from Intercom.",
      "type": "array",
      "format": "traitMapping",
      "options": {
        "direction": "incoming",
        "showOverwriteToggle": false,
        "placeholder": "Intercom Lead Field",
        "allowCreate": true,
        "loadOptions": "/schema/contact_fields",
        "source": "intercom_lead"
      },
      "default": [
        { "service": "external_id", "hull": "intercom_lead/user_id", "readOnly": true, "overwrite": true },
        { "service": "id", "hull": "intercom_lead/id", "readOnly": true, "overwrite": true },
        { "service": "email", "hull": "intercom_lead/email", "readOnly": true, "overwrite": true },
        { "service": "avatar", "hull": "intercom_lead/avatar", "overwrite": true },
        { "service": "browser", "hull": "intercom_lead/browser", "overwrite": true },
        { "service": "browser_language", "hull": "intercom_lead/browser_language", "overwrite": true },
        { "service": "browser_version", "hull": "intercom_lead/browser_version", "overwrite": true },
        { "service": "companies", "hull": "intercom_lead/companies", "overwrite": true },

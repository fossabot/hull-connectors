{
  "name": "locals",
  "type": "array",
  "default": [{
    "target": "tracking_id",
    "source": "$split(user.external_id,/1/)[1]"
  }],
  "items": {
    "type": "object",
    "required": ["target", "source"],
    "properties": {
      "target": {
        "default": "new_variable",
        "title": "Variable Name",
        "type": "string",
        "pattern": "^[/a-zA-Z_\\-0-9]+$"
      },
      "source": {
        "default": "user.email",
        "title": "Expression",
        "type": "string"
      }
    }
  }
}
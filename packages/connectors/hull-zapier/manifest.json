{
  "name": "Zapier",
  "description": "Zapier Connector",
  "tags": [
    "batch",
    "batch-accounts",
    "smart-notifier",
    "kraken-exports",
    "first-install"
  ],
  "logo": "logo.png",
  "picture": "picture.png",
  "ui": false,
  "readme": "readme.md",
  "version": "0.1.39-monorepo",
  "private_settings": [
    {
      "name": "triggers",
      "title": "Rest Hook Subscriptions",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {}
      },
      "default": []
    },
    {
      "name": "send_all_user_attributes",
      "title": "Sending all user attributes by default",
      "type": "boolean",
      "default": true,
      "format": "hidden"
    },
    {
      "name": "send_all_account_attributes",
      "title": "Sending all account attributes by default",
      "type": "boolean",
      "default": true,
      "format": "hidden"
    },
    {
      "name": "invitation",
      "default": "https://zapier.com/apps/hull/integrations",
      "type": "string"
    },
    {
      "name": "synchronized_user_segments",
      "title": "User Filter",
      "description": "Which users are sent to Zapier",
      "type": "array",
      "format": "segment",
      "options": {
        "standard": {
          "ALL": "All Users"
        }
      },
      "default": ["ALL"]
    },
    {
      "name": "synchronized_account_segments",
      "title": "Account Filter",
      "description": "Which accounts are sent to Zapier",
      "type": "array",
      "format": "accountSegment",
      "options": {
        "standard": {
          "ALL": "All Accounts"
        }
      },
      "default": ["ALL"]
    }
  ],
  "resources": [],
  "settings_sections": [
    {
      "title": "Credentials",
      "description": "Copy this token and paste it in the Zapier authentication window",
      "step": "credentials",
      "properties": ["json.credentials"]
    }
  ],
  "incoming": [
    {
      "url": "/subscribe",
      "handler": "subscribe",
      "options": {
        "credentialsFromQuery": true,
        "bodyParser": "json"
      }
    },
    {
      "url": "/unsubscribe",
      "handler": "unsubscribe",
      "options": {
        "credentialsFromQuery": true,
        "bodyParser": "json"
      }
    },
    {
      "url": "/create",
      "handler": "create",
      "options": {
        "credentialsFromQuery": true,
        "bodyParser": "json"
      }
    },
    {
      "url": "/search",
      "handler": "search",
      "options": {
        "credentialsFromQuery": true,
        "bodyParser": "json"
      }
    }
  ],
  "json": [
    {
      "url": "/auth",
      "handler": "auth"
    },
    {
      "url": "/segments",
      "handler": "segments",
      "options": {
        "respondWithError": true
      }
    },
    {
      "url": "/schema",
      "handler": "schema",
      "options": {
        "respondWithError": true
      }
    },
    {
      "url": "/credentials",
      "name": "credentials",
      "format": "credentials",
      "title": "Credentials",
      "description": "The Token to pass to Zapier",
      "type": "string",
      "handler": "credentials"
    }
  ],
  "subscriptions": [
    {
      "url": "/smart-notifier",
      "conditions": {
        "channels": {
          "only": ["user:update", "ship:update", "account:update"]
        },
        "segments": {
          "user:update": ["private_settings.synchronized_user_segments"],
          "account:update": ["private_settings.synchronized_account_segments"]
        }
      },
      "channels": [
        {
          "channel": "user:update",
          "handler": "userUpdate"
        },
        {
          "channel": "account:update",
          "handler": "accountUpdate"
        }
      ]
    }
  ],
  "statuses": [
    {
      "url": "/status",
      "type": "interval",
      "value": "60",
      "handler": "status"
    }
  ],
  "status": {
    "initial_value": "ok",
    "url": "/status",
    "type": "interval",
    "value": "60",
    "handler": "status"
  },
  "mappings": [
       {
      "direction": "incoming",
      "service": {
        "entity": "action",
        "name": "Zap Action"
      },
      "hull": {
        "entity": "user"
      },
      "description": "Create or update a Hull User from a Zap"
    },
    {
      "direction": "incoming",
      "service": {
        "entity": "action",
        "name": "Zap Action"
      },
      "hull": {
        "entity": "account"
      },
      "description": "Create or update a Hull Account from a Zap"
    },
    {
      "direction": "incoming",
      "service": {
        "entity": "action",
        "name": "Zap Action"
      },
      "hull": {
        "entity": "user_event"
      },
      "description": "Create a User Event in Hull from a Zap"
    },
    {
      "direction": "incoming",
      "service": {
        "name": "Retrieve User",
        "entity": "step"
      },
      "hull": {
        "entity": "user"
      },
      "description": "Retrieve a Hull user from its identifiers and pass to the next action"
    },
    {
      "direction": "incoming",
      "service": {
        "name": "Retrieve Account",
        "entity": "step"
      },
      "hull": {
        "entity": "account"
      },
      "description": "Retrieve a Hull account from its identifiers and pass to the next action"
    },
    {
      "direction": "outgoing",
      "service": {
        "name": "trigger",
        "entity": "New User Trigger"
      },
      "hull": {
        "entity": "user"
      },
      "description": "Trigger a Zap when a User is created in Hull"
    },
    {
      "direction": "outgoing",
      "service": {
        "name": "trigger",
        "entity": "User Updated Trigger"
      },
      "hull": {
        "entity": "user"
      },
      "description": "Trigger a Zap when a User is updated in Hull"
    },
    {
      "direction": "outgoing",
      "service": {
        "name": "trigger",
        "entity": "New Account Trigger"
      },
      "hull": {
        "entity": "account"
      },
      "description": "Trigger a Zap when an Account is created in Hull"
    },
    {
      "direction": "outgoing",
      "service": {
        "name": "trigger",
        "entity": "New User Event"
      },
      "hull": {
        "entity": "event"
      },
      "description": "Trigger a Zap when a new Event is created in Hull"
    },
    {
      "direction": "outgoing",
      "service": {
        "name": "trigger",
        "entity": "User attribute updated"
      },
      "hull": {
        "entity": "user"
      },
      "description": "Trigger a Zap when a User attribute was updated"
    },
    {
      "direction": "outgoing",
      "service": {
        "name": "trigger",
        "entity": "Account attribute updated"
      },
      "hull": {
        "entity": "account"
      },
      "description": "Trigger a Zap when an Account attribute was updated"
    },
    {
      "direction": "outgoing",
      "service": {
        "name": "trigger",
        "entity": "User entered segment"
      },
      "hull": {
        "entity": "user"
      },
      "description": "Trigger a Zap when a User enters a segment"
    },
    {
      "direction": "outgoing",
      "service": {
        "name": "trigger",
        "entity": "User left segment"
      },
      "hull": {
        "entity": "user"
      },
      "description": "Trigger a Zap when a User leaves a segment"
    },
    {
      "direction": "outgoing",
      "service": {
        "name": "trigger",
        "entity": "Account entered segment"
      },
      "hull": {
        "entity": "account"
      },
      "description": "Trigger a Zap when an Account enters a segment"
    },
    {
      "direction": "outgoing",
      "service": {
        "name": "trigger",
        "entity": "Account left segment"
      },
      "hull": {
        "entity": "account"
      },
      "description": "Trigger a Zap when an Account leaves a segment"
    }
  ]
}
